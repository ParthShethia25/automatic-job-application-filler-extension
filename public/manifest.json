{
  "manifest_version": 3,
  "name": "Auto Job Application Filler",
  "version": "1.0.2",
  "description": "AI-powered auto-filler for job applications",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "AutoFill AI"
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}